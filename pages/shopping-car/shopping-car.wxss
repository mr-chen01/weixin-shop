page{
  background-color: #f5f6f7;
}

.header-container {
  width: 100%;
  height: 86rpx;
  text-align: center;
  line-height: 86rpx;
  background-color: #69c3aa;
}
.header-word {
  font-size: 32rpx;
  color: #fff;
}
.car-container{
  background-color: #ffffff;
  height: 100px;
  border-bottom:1px solid #e7e7eb;
}
.car-container .left{
  float:left;
  width:93px;
  height: 96px;
  position: relative;
  /* clear: both; */
}
.car-container .left image{
  height:75px;
  width:75px;
  padding: 2px;
  top:8px;
  right: -18px;
 position: absolute;
}
.car-container .left icon{
  position: absolute;
  top:38px;
 left:4px;

}
.car-container text{
  display: inline-block;
  font-size: 30rpx;
  height: 42px;

}
.car-container .right{
  width: 196px;
  float: right; 
}
.car-container .right .detail{
  height:59px;
  position: relative;
}
.detail text{
  line-height: 43px;
   float: left; 
   font-size: 15px;
   color: red;
}
.addNum{
  margin-left: 24px;
  margin-top: 10px;
 float: left; 
}
.add{
  text-align: center;
  float: left;
  height: 21px;
  width: 20px;
  border: 1px solid black;
}
.num{
  float: left;
  height: 21px;
  width: 30px;
  border-top: 1px solid black;
   border-bottom: 1px solid black;
}
.sub{
  text-align: center;
  float: left;
  height: 21px;
  width: 20px;
  border: 1px solid black;
}
.car-container .right image{
  position: absolute;
  right: 8px;
  bottom: 18px;
  height: 50rpx;
  width: 50rpx;
}
.bottom{
  background-color:#ffffff;
  position: fixed;
  clear: both;
  bottom: 0px;
  width: 100%;
  height: 44px;

}
.bottom .bottom-left{
  float: left;
  padding: 10px;
  font-size: 14px;
}
.bottom .bottom-left text{
  font-size: 18px;
  padding-left:10px; 
  color: #ff5f5f;
}
.bottom .bottomIcon{
  height: 28px;
  display: block;
  margin-left: 10px;
  margin-top:10px; 
  float: left;
  
}
.bottom .bottomIcon text{
  float: left;
  margin-right:5px; 
}
.bottom .bottomIcon icon{
 float: left;
}
.bottom .bottom-right{
  width: 66px;
height: 25px;
  float: right;
  color: white;
  background-color: #ff7e3a;
  text-align: center;
  margin: 9px 8px 0 0;
  border-radius: 3px;
}